<div id = "eventHistory" class ="eventList">
	<div id = "history-header-container">
            <div class = "row" id="history-header"><h2>Event Archive</h2></div>
            <div class = "row"><%= will_paginate @events %></div>
    </div>
    <div class = "row">
    	<div id = "eventHistoryTable">
            <table class = "table table-striped table-hover">
                <thead>
                    <tr>
                        <th style = "width: 15%">Date</th>
                        <th style = "width: 30%">Event Name</th>
                        <th style = "width: 25%">Created By</th>
                        <th style = "width: 30%">Winning Venue</th>
                    </tr>
                </thead>

                <tbody>
                    <% @events.each do |event| %>
                              <tr class = "notfirst">
                                <td><%= event.event_start.strftime("%d%b%Y") %></td>
                                <td><%= link_to event.name, event_path(event) %>
                                <td><%= event.owner %></td>
                                <td><%= (event.winner == nil ? "No Venues Suggested" : Venue.find_by_id(event.winner)) %></td>
                              </tr>
                    <% end %>
                </tbody>
            </table>
        </div><!-- eventHistoryTable -->
    </div><!--row-->
</div><!-- eventList -->