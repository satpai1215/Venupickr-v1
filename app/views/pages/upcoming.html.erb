
<div id = "eventHistory" class ="eventList">
	<div id = "history-header-container" class = "row">
            <div id="history-header" class = "span9"><h2>Scheduled Events</h2>
            </div>
    </div>
    <div class = "row"><div class = "span4 offset1"><%= will_paginate @events %></div></div>
    <div class = "row">
    	<div id = "eventHistoryTable"  class = "span10 offset1">
            <table class = "table table-striped table-hover">
                <thead>
                    <tr>
                        <th style = "width: 15%">Date</th>
                        <th style = "width: 30%">Event Name</th>
                        <th style = "width: 25%">Created By</th>
                        <th style = "width: 30%">Winning Venue</th>
                    </tr>
                </thead>

                <tbody>
                    <% @events.each do |event| %>
                              <tr class = "notfirst">
                                <td><%= event.event_start.strftime("%d%b%Y") %></td>
                                <td><%= link_to event.name, event_path(event) %>
                                <td><%= event.user.to_s %></td>
                                <td><%= (event.winner == nil ? "No Venues Suggested" : Venue.find(event.winner).name) %></td>
                              </tr>
                    <% end %>
                </tbody>
            </table>
        </div><!-- eventHistoryTable -->
    </div><!--row-->
</div><!-- eventList -->