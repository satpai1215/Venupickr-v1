<div id = "new-guest-form-header">
	<h2>"<%= @event.name %>"</h2>
	<%= link_to "Back", event_path(@event), id: "back-link" %>
</div>

<div class = "user_session_page" id = "invite-list-container">
	
	<%= link_to "?", "#", {class: "help-btn", id: "invite-list-help-btn", :remote => true } %>
	<%= render 'help_dialog' %>
	<%= render 'gmail_help_dialog' %>
	<%= render 'guest_form'%>
</div>

<script>

$(function() {

    $("#invite-list-help-btn").click(function(event) {
      event.preventDefault();
      $("#invite-list-help-dialog").fadeIn(500);
    });

    $(".close-help-dialog").click(function(event) {
      event.preventDefault();
      $(this).parent().parent('.help-dialog').fadeOut(500);
    });

    $("#gmail-contacts-link").hover(
    	function() {
			$("#gmail-hover-help-dialog").fadeIn(500);
		},
		function() {
			$("#gmail-hover-help-dialog").fadeOut(500);
		});

	<% if current_user.gmail_contacts %>
		getEmails();
	<% end %>

});
</script>
