<!DOCTYPE html>
<html>
<head>
  <title><%= Venupickr::Application::APP_NAME.upcase %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
  <%= include_gon %>
  <%= stylesheet_link_tag "application_mobile", :media => "all" %>
  <%= javascript_include_tag "application" %>
	<%= csrf_meta_tag %>
</head>
<body>
	
		
		<div id = "page_title">
			<!-- <img src = "/assets/beta_banner.png" id = "banner-pic"/> -->
			<div class = "banner" id = "banner-top">
				<div class = "banner-header" id = "banner-top-header"><%= Venupickr::Application::APP_NAME.upcase %></div>
				<div class = "login-nav" id="login-nav-top">
					<% if user_signed_in? %>
						Logged in as <%= current_user %>
					<% else %>
						<%= link_to "Sign In", new_user_session_path, {class: "register-link"} %>
					<% end %>
				</div>
			</div>

			<div class = "banner" id = "banner-bottom">
				<div class = "banner-header" id = "banner-bottom-header">the social way to plan events</div>
				<div class = "login-nav" id="login-nav-bottom">
					<% if user_signed_in? %> 
						 <%= link_to "User Settings",  edit_user_registration_path, {class: "signed-in-link"} %> | 
						 <%= link_to "Logout", destroy_user_session_path, {class: "signed-in-link", method: :delete} %>
					<% else %>
						<%= link_to "Register", new_user_registration_path, {class: "register-link"} %>
					<% end %>
				</div>
			</div>


			
		</div> <!--page_title -->


<% if user_signed_in? %>
	<div id = "nav_body">
		<header>
			<div id = "nav-container">
						<nav>	
							<ul class = "nav nav-pills">
								<li><%= link_to "HOME", events_path %></li>
								<li><%= link_to "PAST EVENTS", pages_archived_path %></li>
								<li><%= link_to "ABOUT", pages_info_path %></li>
							</ul>
						</nav>
			</div>  <!--nav_body-->
<% end %>
		</header>
	</div> <!--title_body-->

	<div id = "content_body">

		<div id = "container" class = "container">
			<%= yield :hero %>
			<div id = "notice">
					<%= notice %>
					<%= alert %>
			</div>
			<div id = "main">			

				<%= yield %>

			</div> <!--main-->

		</div> <!--container -->
	</div> <!--content_body-->
			<footer>www.venupickr.com</footer>
</body>
        <script type="text/javascript" src="http://oauth.googlecode.com/svn/code/javascript/oauth.js"></script>
        <script type="text/javascript" src="http://oauth.googlecode.com/svn/code/javascript/sha1.js"></script>
        <script> $(document).ready(function() {$("#notice").delay(3000).fadeOut();});</script>
