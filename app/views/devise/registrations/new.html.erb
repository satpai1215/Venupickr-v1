<div class = "sign-in-header"><h1>Welcome to the Venuepickr App!</h1></div>
<div class = "user_session_page">
    <h3>Registration Form</h3>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <%= hidden_field_tag :invitation_token, session[:invite_token] %>

      <div class = "field"><%= f.label :email %><br/><%= f.email_field :email, :autofocus => true %></div>

      <div class = "field"><%= f.label :firstname, "First Name" %><br/><%= f.text_field :firstname %></div>

      <div class = "field"><%= f.label :lastname, "Last Name" %><br/><%= f.text_field :lastname %></div>

      <div class = "field"><%= f.label :password %><%= f.password_field :password %></div>

      <div class = "field"><%= f.label :password_confirmation %><%= f.password_field :password_confirmation %></div>
      
       <div class = "actions"><%= f.submit "Sign Up", {:class => "sign_up_btn btn btn-primary"} %></div>
    <% end %>


 <%#= link_to "Go Back", :back, {:id => "back-link"} %>
</div>