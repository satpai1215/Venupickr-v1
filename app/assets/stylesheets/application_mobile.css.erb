 }

 /*----------------------------------------------------------------------------- 
= NOTICE 
-----------------------------------------------------------------------------*/
#notice {
	cursor: pointer;
	text-align: center;
	height: inherit;
	color: white;
	background: #FF7F00;
	opacity: 0.8;
	position: fixed;
	font-size: 1.5em;
	top: 0;
	left: 0;
	right: 0;
	z-index: 10000000;
}

 /*----------------------------------------------------------------------------- 
= PAGE TITLE AND LOGIN NAV
-----------------------------------------------------------------------------*/

#page_title {
	min-width: 100%;
}

 #banner-pic {
 	width: 100%;
 	height: auto;
 	margin-bottom: 5px;
 }

.banner {
	text-align: center;
}

 #banner-top {
 	background-color: #FF7F00;
 	color: white;
 }
 	#banner-top-header {
 		font-family: Verlag Black;
 		font-size: 1.5em;
 		padding-top: 2%;
  		letter-spacing: 2px;
 		vertical-align: bottom;
 	}
 #banner-bottom {
 	background-color: white;
 	color: #FF7F00;
 }
 	#banner-bottom-header {
 		font-family: Verlag Black;
 	}

.login-nav {
	text-align: center;
	font-size: 1.25em;
	margin: 0px auto;
	padding: 2px;
}

	#login-nav-top a {
		font-weight: bold;
		text-decoration: none;
		color: white;
	}
	#login-nav-bottom a {
		font-weight: bold;
		text-decoration: none;
		color: #FF7F00;
	}
	.register-link:hover {
		font-family: Verlag Black;
	}

#banner-bottom-header {
	display: none;
}



 /*----------------------------------------------------------------------------- 
= NAV
-----------------------------------------------------------------------------*/
 #nav-container {
 	width: 100%;
 	clear: both;
 	text-align: center;
 }
nav {
	display: inline-block;
	margin: 0px;
 }

 .nav li a {
 	color: white;
 	font-family: Verlag Black;
 	letter-spacing: 1px;
 	text-decoration: none;
 	padding-bottom: 5px;
 }

 .nav li:hover {
	-webkit-transform: scale(1.2);
	-moz-transform: scale(1.2);
	transform: scale(1.2);
}

.nav li>a:hover { 
	background: none;
	color: #F2BA79;
}	

