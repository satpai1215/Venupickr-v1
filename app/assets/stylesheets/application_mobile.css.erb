  /*----------------------------------------------------------------------------- 
= DIALOGS
-----------------------------------------------------------------------------*/

.help-dialog {
	background: #E1F2F9;
	border: 2px solid #428bca;
	text-align: center;
	z-index: 10000;
	display: none;
	border-radius: 5px;
	
	padding: 10px;
	width: 100%;
}
	.help-dialog h3 {
		font-family: Verlag Bold;
		margin-top: 5px;
	}
	.help-dialog ul li {
		text-align: left;
		list-style-type: circle;
		list-style-position: outside;
		margin-left: 4%;
		margin-bottom: 10px;
	}
	.help-dialog ol li {
		font-size: 0.9em;
		list-style: decimal;
		list-style-position: outside;
		margin-left: 30px;
	}

