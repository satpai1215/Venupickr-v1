 /*----------------------------------------------------------------------------- 
= NOTICE 
-----------------------------------------------------------------------------*/
#notice {
	cursor: pointer;
	text-align: center;
	height: inherit;
	color: white;
	background: #428bca;
	opacity: 0.95;
	position: fixed;
	font-size: 1.5em;
	bottom: 0;
	left: 0;
	right: 0;
	z-index: 10000000;
}

 /*----------------------------------------------------------------------------- 
= PAGE TITLE AND LOGIN NAV
-----------------------------------------------------------------------------*/

#page_title {
	min-width: 100%;
}

 #banner-pic {
 	width: 100%;
 	height: auto;
 	margin-bottom: 5px;
 }

.banner {
	text-align: center;
}

 #banner-top {
 	background-color: none;
 	color: white;
 }
 	#banner-top-header {
 		font-family: Verlag Bold;
 		font-size: 1.5em;
 		padding-top: 2%;
  		letter-spacing: 2px;
 		vertical-align: bottom;
 	}
 	#banner-top-header a {
 		color: whitesmoke;
 		text-decoration: none;
 	}
 #banner-bottom {
 	background-color: white;
 	color: #F06305; /*#FF7F00;*/
 }
 	#banner-bottom-header {
 		font-family: Verlag Bold;
 	}

.login-nav {
	text-align: center;
	font-size: 1.25em;
	margin: 0px auto;
	padding: 2px;
}

	#login-nav-top a {
		font-weight: bold;
		text-decoration: none;
		color: white;
	}
		#login-nav-top a:hover {
			font-family: Verlag Bold;
		}
	#login-nav-bottom a {
		font-weight: bold;
		text-decoration: none;
		color: #F06305;
	}
	#login-nav-bottom a:hover {
		font-family: Verlag Bold;
	}

#banner-bottom-header {
	display: none;
}



 /*----------------------------------------------------------------------------- 
= NAV
-----------------------------------------------------------------------------*/
 #nav-container {
 	width: 100%;
 	clear: both;
 	text-align: center;
 }
nav {
	display: inline-block;
	margin: 0px;
 }

 .nav li a {
 	color: white;
 	font-family: Verlag Bold;
 	letter-spacing: 1px;
 	text-decoration: none;
 	padding-bottom: 5px;
 }

 .nav li:hover {
	-webkit-transform: scale(1.2);
	-moz-transform: scale(1.2);
	transform: scale(1.2);
}

.nav li>a:hover { 
	background: none;
	color: #F06305;
}	

